{
    "compilerOptions": {
        "moduleResolution": "node16",
        "lib": ["es2022"],
        "module": "Node16",
        "target": "ES2022",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "twitch-blizzbot/functions": [
                "./modules/functions.js"
            ],
            "twitch-blizzbot/consoleclient": [
                "./modules/consoleclient.js"
            ],
            "twitch-blizzbot/discordclient": [
                "./modules/discordclient.js"
            ],
            "twitch-blizzbot/twitchclient": [
                "./modules/twitchclient.js"
            ],
            "twitch-blizzbot/constants": [
                "./modules/constants.js"
            ],
            "twitch-blizzbot/clients": [
                "./modules/clients.js"
            ],
            "twitch-blizzbot/logger": [
                "./modules/logger.js"
            ],
            "twitch-blizzbot/CustomError": [
                "./modules/CustomError.js"
            ],
            "twitch-blizzbot/slashsetup": [
                "./modules/slashsetup.js"
            ],
        },
        "checkJs": true,
        "allowJs": true
    },
    "include": [
        "modules/**/*",
        "commands/**/*",
        "events/**/*",
        "bot.js",
        "typings/*",
        "package.json"
    ]
}
